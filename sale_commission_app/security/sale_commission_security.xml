<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="group_show_commission_view" model="res.groups">
            <field name="name">Commission</field>
        </record>

        <record model="ir.module.category" id="module_category_sales_commision">
            <field name="name">Sales Commission</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_sales_commission_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_sales_commision"/>
        </record>

        <record id="group_sales_commission_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_sales_commision"/>
            <field name="implied_ids" eval="[(4, ref('sale_commission_app.group_sales_commission_user'))]"/>
        </record>

        <record id="base.user_root" model="res.users">
            <field name="groups_id" eval="[(4, ref('sale_commission_app.group_sales_commission_manager'))]"/>
        </record>

        <record id="sale_commission_user_security_rule" model="ir.rule">
            <field name="name">Sale Commission Personal Rule </field>
            <field ref="model_sale_commission_line" name="model_id"/>
            <field name="domain_force">['|',('member_id','=',user.id),('partner_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sales_commission_user'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="sale_commission_manager_security_rule" model="ir.rule">
            <field name="name">Sale Commission Manager Rule </field>
            <field ref="model_sale_commission_line" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_commission_manager'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

    </data>
</odoo>
