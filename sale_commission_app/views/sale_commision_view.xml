<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sale Commission res.config View -->
        <record id="res_config_sale_commission" model="ir.ui.view">
            <field name="name">res.config.sale.commission</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div[@data-key='sale_management']/h2" position="before">
                    <h2 groups="sale_commission_app.group_show_commission_view">Sale Commission</h2>
                    <div class="row mt16 o_settings_container" groups="sale_commission_app.group_show_commission_view">
                        <div id="apply_commission" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="apply_sale_commission"/>
                                <div class="text-muted">
                                    Commission Manually
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="apply_sale_commission" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="method_of_commission" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="calculation_method"/>
                                <div class="text-muted">
                                    Calculation Manually
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="calculation_method" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>


        <!-- Sale Commission View In Product Category -->
        <record id="product_categ_sale_commission" model="ir.ui.view">
            <field name="name">product.category.sale.commission</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group[@name='first']" position="after">
                    <group name="sale_commission" string="Sales Commission" groups="sale_commission_app.group_show_commission_view">
                        <group>
                            <field name="_is_commission"/>
                            <field name="account_type" attrs="{'invisible': [('_is_commission', '=', False)], 'required': [('_is_commission', '=', True)]}"/>
                        </group>
                        <field name="sale_commission_ids" attrs="{'invisible':[('_is_commission','=',False)]}" context="{'default_account_type':account_type}">
                            <tree string="Sale Commission" editable="bottom">
                                <field name="user_id"/>
                                <field name="initiate_total"/>
                                <field name="end_total"/>
                                <field name="account_type" readonly="1"/>
                                <field name="user_commission"
                                    attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="user_commission_amount" 
                                    attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sales_manager_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="sales_person_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="manager_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sale_person_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>


        <!-- Sale Commission in Product Varients View -->
        <record id="product_varients_sale_commission" model="ir.ui.view">
            <field name="name">product.varients.sale.commission</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[2]" position="inside">
                    <group name="sale_commission" string="Sales Commission" groups="sale_commission_app.group_show_commission_view">
                        <group>
                            <field name="_is_commission"/>
                            <field name="account_type" attrs="{'invisible': [('_is_commission', '=', False)], 'required': [('_is_commission', '=', True)]}"/>
                        </group>
                        <field name="product_commission_ids" attrs="{'invisible':[('_is_commission','=',False)]}" context="{'default_account_type':account_type}">
                            <tree string="Sale Commission" editable="bottom">
                                <field name="user_id"/>
                                <field name="initiate_total"/>
                                <field name="end_total"/>
                                <field name="account_type" readonly="1"/>
                                <field name="user_commission"
                                    attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="user_commission_amount" 
                                    attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sales_manager_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="sales_person_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="manager_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sale_person_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>


        <!-- Sale Commission In Crm Team View -->
        <record id="crm_team_sale_commission" model="ir.ui.view">
            <field name="name">crm.team.sale.commission</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <!-- xpath for Account Type Field -->
                <xpath expr="//form/sheet/group/group[@name='right']" position="inside">
                    <field name="account_type" groups="sale_commission_app.group_show_commission_view"/>
                </xpath>
                <!-- xpath for Sale Commission notebook -->
                <xpath expr="//form/sheet/notebook/page[1]" position="after">
                    <page name="sales_commission" string="Sales Commission" groups="sale_commission_app.group_show_commission_view">
                        <group>
                            <group>
                                <field name="_is_commission"/>
                                <field name="account_type" attrs="{'invisible': [('_is_commission', '=', False)], 'required': [('_is_commission', '=', True)]}"/>
                            </group>
                        </group>
                        <field name="sale_team_commission_ids" attrs="{'invisible':[('_is_commission','=',False)]}" context="{'default_account_type':account_type}">
                            <tree string="Sale Commission" editable="bottom">
                                <field name="user_id"/>
                                <field name="initiate_total"/>
                                <field name="end_total"/>
                                <field name="account_type" readonly="1"/>
                                <field name="user_commission"
                                    attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="user_commission_amount" 
                                    attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sales_manager_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="sales_person_commission" attrs="{'readonly':[('account_type','=','fixed_amount')]}"/>
                                <field name="manager_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                                <field name="sale_person_commission_amount" attrs="{'readonly':[('account_type','=', 'by_percentage')]}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

